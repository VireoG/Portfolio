@model ChangeAvatarViewModel

@{
    ViewData["Title"] = "Change Avatar";
}

<div class="modal-content bordunset">
    <div class="modal-header">
        <h6>Select file from your PC</h6>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form asp-action="ChangeAvatar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="@Model.UserName" class="control-label">@Model.UserName</label>
            <div class="form-group">
                <input asp-for="@Model.Avatar" type="file" class="form-control" />
                <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btnsend" />|
                <a asp-action="Profile" asp-controller="User" class="btncancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

