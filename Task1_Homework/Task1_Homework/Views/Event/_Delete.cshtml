@model Task1_Homework.Business.Event

@{
    ViewData["Title"] = "Delete Confirm";
}

<div class="modal-content ">
    <div class="modal-header">
        <h6 class="">Are you sure you want to delete this event?</h6>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="Event">
            <input type="submit" value="Delete" class="btnsend" /> |
            <a asp-action="Index" asp-controller="Event" class="btncancel">Cancel</a>
        </form>
    </div>
</div>