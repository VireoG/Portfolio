@using Microsoft.AspNetCore.Identity
@model Task1_Homework.Models.ChangeRoleViewModel

@{
    ViewData["Title"] = "Role";
}

<h2 class="loginpagetext">Change Role for @Model.UserEmail</h2>

<form asp-action="Edit" method="post" class="buytextni22">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btnsend">Save</button>
</form>
