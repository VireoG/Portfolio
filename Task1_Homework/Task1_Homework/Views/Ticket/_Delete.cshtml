@model Task1_Homework.Business.Ticket

@{
    ViewData["Title"] = "Delete Confirm";
}

<div class="modal-content">
    <div class="modal-header">
        <h6>Are you sure you want to delete this ticket?</h6>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="Delete" asp-controller="Ticket">
            <input type="submit" value="Delete" class="btnsend" /> |
            <a asp-action="Profile" asp-controller="User" class = "btncancel">Cancel</a>
        </form>
    </div>
</div>