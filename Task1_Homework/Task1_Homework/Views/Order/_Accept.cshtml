@model Task1_Homework.Business.Models.Order

@{
    ViewData["Title"] = "Confirmation";
}

<div class="modal-content">
    <div class="modal-header">
        <h6>
            Enter track number for ticket:
        </h6>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body btnsg3">
            <div class="row">
                @Html.HiddenFor(m => m.Id)
                <dl class="row">
                    <dt class="col-sm-2">
                        <label class="control-label">Event:</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Event.Name)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">Price:</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Price)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">Buyer:</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Buyer.UserName)
                    </dd>
                </dl>
                <form asp-action="Accept">
                    <div class="form-group">
                        <label asp-for="TrackNumber" class="control-label"><strong>TrackNumber:</strong></label>
                        <input asp-for="TrackNumber" class="form-control" />
                        <span asp-validation-for="TrackNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Accept" class="btn btn-primary" /> |
                        <a asp-action="SalesRequests" asp-controller="Order" class="btn  btn-danger">Cancel</a>
                    </div>
                </form>
            </div>  
    </div>
</div>

@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
