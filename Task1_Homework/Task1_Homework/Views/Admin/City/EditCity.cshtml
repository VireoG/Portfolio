@model Task1_Homework.Business.City

@{
    ViewData["Title"] = "Edit City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="loginpagetext buytext">Edit City</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCity" class="buytextni22">
