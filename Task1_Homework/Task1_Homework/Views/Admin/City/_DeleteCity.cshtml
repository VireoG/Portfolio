@model Task1_Homework.Business.City

@{
    ViewData["Title"] = "Delete Confirm";
}

<div class="modal-content">
    <div class="modal-header">
        <h6>Are you sure you want to delete this City?</h6>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
        </dl>

        <form asp-action="DeleteCity" asp-controller="Admin">
            <input type="submit" value="Delete" class="btnsend" /> |
            <a asp-action="GetCityList" asp-controller="Admin" class="btncancel">Cancel</a>
        </form>
    </div>
</div>